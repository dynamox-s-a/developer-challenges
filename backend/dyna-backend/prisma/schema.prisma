generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String
}

enum Type {
  PUMP
  FAN
}

enum SensorType {
  HFp
  TcAs
  TcAg
}

enum StatusMachine {
  ON
  OFF
}

model Machine {
  id                  Int           @id @default(autoincrement())
  name                String
  typeOfMachine       Type
  statusMachine       StatusMachine 

  pointmonitoring1 SensorMonitoring? @relation("Monitoring1", fields: [pointmonitoring1_id], references: [id], onDelete: Cascade)
  pointmonitoring2 SensorMonitoring? @relation("Monitoring2", fields: [pointmonitoring2_id], references: [id], onDelete: Cascade)

  pointmonitoring1_id Int?
  pointmonitoring2_id Int?
}

model SensorMonitoring {
  id         Int        @id @default(autoincrement())
  name       String?
  sensorType SensorType

  machineMonitoring1 Machine[] @relation("Monitoring1")
  machineMonitoring2 Machine[] @relation("Monitoring2")
}
