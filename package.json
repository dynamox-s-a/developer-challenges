{
    "name": "machine-management-system",
    "version": "1.0.0",
    "description": "A full-stack machine and monitoring points management application",
    "private": true,
    "scripts": {
        "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
        "dev:server": "cd server && npm run dev",
        "dev:client": "cd client && npm run dev",
        "build": "npm run build:server && npm run build:client",
        "build:server": "cd server && npm run build",
        "build:client": "cd client && npm run build",
        "start": "concurrently \"npm run start:server\" \"npm run start:client\"",
        "start:server": "cd server && npm start",
        "start:client": "cd client && npm start",
        "test": "npm run test:server",
        "test:server": "cd server && npm test",
        "install:all": "npm install && cd server && npm install && cd ../client && npm install",
        "clean": "npm run clean:server && npm run clean:client",
        "clean:server": "cd server && rm -rf dist node_modules",
        "clean:client": "cd client && rm -rf .next out node_modules"
    },
    "devDependencies": {
        "concurrently": "^8.2.2"
    },
    "keywords": [
        "machine-management",
        "monitoring",
        "nextjs",
        "express",
        "typescript",
        "mui",
        "redux"
    ],
    "author": "",
    "license": "MIT",
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=8.0.0"
    }
}