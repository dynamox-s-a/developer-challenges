{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Chrome against localhost:3000",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/src",
      "preLaunchTask": "npm: start",
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "webpack:///src/*": "${webRoot}/*",
        "vite:///src/*": "${webRoot}/*"
      }
    }
  ]
}
