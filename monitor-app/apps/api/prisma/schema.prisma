// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @default(cuid()) @id
  name String
  email String @unique
  password String

  @@map("users")
}

model Machine {
  id String @default(cuid()) @id
  name String @unique
  type String
  spots Spot[]

   @@map("machines")
}

model Sensor {
  id String @default(cuid()) @id
  model String
  spot Spot[]

  @@map("sensors")
}

model Spot {
  id String @default(cuid()) @id
  name String
  machine Machine @relation(fields: [machineId], references: [id])
  machineId String
  sensor Sensor? @relation(fields: [sensorId], references: [id])
  sensorId String?

  @@map("spots")
}
