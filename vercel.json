{
  "version": 2,
  "github": {
    "enabled": true
  },
  "buildCommand": "npx nx build frontend --prod && npx nx serve backend --prod",
  "installCommand": "npm install",
  "framework": null,
  "builds": [
    {
      "src": "dist/apps/backend/main.js",
      "use": "@vercel/node"
    },
    {
      "src": "dist/apps/frontend/*",
      "use": "@now/static"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "dist/apps/backend/main.js",
      "methods": ["GET", "POST", "PUT", "PATCH", "DELETE"]
    }
  ]
}
